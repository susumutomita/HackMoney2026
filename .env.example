# ===========================================
# ZeroKey Treasury - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials

# Node environment
NODE_ENV=development

# ===========================================
# LLM API Keys (choose one or more)
# ===========================================
# Anthropic API key for Claude
ANTHROPIC_API_KEY=

# OpenAI API key (alternative)
OPENAI_API_KEY=

# ===========================================
# Blockchain RPC URLs
# ===========================================
# Ethereum mainnet
MAINNET_RPC_URL=https://eth.llamarpc.com

# Ethereum Sepolia testnet
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Base mainnet
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia testnet
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Optimism mainnet
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# Optimism Sepolia testnet
OPTIMISM_SEPOLIA_RPC_URL=https://sepolia.optimism.io

# ===========================================
# Block Explorer API Keys
# ===========================================
ETHERSCAN_API_KEY=
BASESCAN_API_KEY=
OPTIMISM_ETHERSCAN_API_KEY=

# ===========================================
# Contract Deployment
# ===========================================
# Deployer private key (NEVER commit real keys!)
PRIVATE_KEY=

# Policy oracle address (receives decisions from backend)
POLICY_ORACLE_ADDRESS=

# Deployed guard contract address
GUARD_CONTRACT_ADDRESS=

# ===========================================
# Backend Service
# ===========================================
# Backend server port
PORT=3001

# Database URL (optional, for persistent storage)
DATABASE_URL=

# Private key for signing policy decisions
POLICY_ORACLE_PRIVATE_KEY=

# ===========================================
# Frontend
# ===========================================
# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001
